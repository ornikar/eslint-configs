{
  "name": "@ornikar/eslint-configs",
  "private": true,
  "repository": "ornikar/eslint-configs",
  "scripts": {
    "postinstall": "ornikar-repo-config-postinstall",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --quiet --report-unused-disable-directives .",
    "release": "lerna publish --conventional-commits"
  },
  "prettier": "@ornikar/prettier-config",
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.10.1"
  },
  "commitlint": {
    "extends": [
      "@ornikar/commitlint-config"
    ]
  },
  "workspaces": [
    "@ornikar/*"
  ],
  "devDependencies": {
    "@ornikar/commitlint-config": "3.2.1",
    "@ornikar/lerna-config": "3.1.1",
    "@ornikar/prettier-config": "3.3.4",
    "@ornikar/repo-config": "6.0.2",
    "check-package-dependencies": "1.2.4",
    "eslint": "7.32.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-unicorn": "37.0.1",
    "lerna": "4.0.0",
    "prettier": "2.4.1"
  }
}
