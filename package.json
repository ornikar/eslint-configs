{
  "name": "@ornikar/eslint-configs",
  "private": true,
  "repository": "ornikar/eslint-configs",
  "scripts": {
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --ext .js --report-unused-disable-directives --fix .",
    "release": "lerna publish --conventional-commits"
  },
  "prettier": "@ornikar/prettier-config",
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.10.1"
  },
  "commitlint": {
    "extends": [
      "@ornikar/commitlint-config"
    ]
  },
  "workspaces": [
    "@ornikar/*"
  ],
  "devDependencies": {
    "@ornikar/commitlint-config": "3.2.0",
    "@ornikar/prettier-config": "3.3.0",
    "@ornikar/repo-config": "5.2.0",
    "@ornikar/lerna-config": "2.3.1",
    "eslint": "6.8.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-unicorn": "14.0.1",
    "husky": "4.3.8",
    "lerna": "3.22.1",
    "prettier": "2.2.1",
    "yarnhook": "0.5.1"
  }
}
